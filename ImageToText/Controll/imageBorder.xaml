<UserControl
    x:Class="ImageToText.Controll.imageBorder"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImageToText.Controll"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    MouseMove="UserControl_MouseMove"
    MouseRightButtonDown="UserControl_MouseDown"
    MouseRightButtonUp="UserControl_MouseUp"
    mc:Ignorable="d">
    <Border
        x:Name="border"
        Width="100"
        Height="100"
        Background="#33B3B3B3"
        BorderBrush="#FF00A7FF"
        BorderThickness="2"
        Cursor="Cross"
        MouseLeftButtonDown="border_MouseLeftButtonDown"
        MouseLeftButtonUp="border_MouseLeftButtonUp"
        MouseMove="border_MouseMove">
        <Border.ContextMenu>
            <ContextMenu>
                <MenuItem Click="MenuItem_Click" Header="Удалить" />
            </ContextMenu>
        </Border.ContextMenu>
    </Border>
</UserControl>
